# Asegurese de tener configurado git en su equipo
git clone https://github.com/porcinitos/lextranslate.git
cd lextranslate

# Para correr asegurese de tener pip instalado
pip --user install pipenv #instalamos el gestor de dependencias
pipenv install #instalamos todas las dependencias
python correr.py #ejecutamos el fichero de compilacion

